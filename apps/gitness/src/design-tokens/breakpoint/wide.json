{
  "spacing": {
    "base": {
      "$type": "spacing",
      "$value": "{step.base}"
    },
    "3xs": {
      "$type": "spacing",
      "$value": "round({step.base}* pow({multiplier.wide}, 1) / 2) * 2"
    },
    "2xs": {
      "$type": "spacing",
      "$value": "round({step.base}* pow({multiplier.wide}, 1.4) / 2) * 2"
    },
    "xs": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 2) / 2) * 2"
    },
    "sm": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 2.2) / 2) * 2"
    },
    "md": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 2.5)/ 2) * 2"
    },
    "lg": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 3) / 2) * 2"
    },
    "xl": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 3.6) / 2) * 2"
    },
    "2xl": {
      "$type": "spacing",
      "$value": "round({step.base}* pow({multiplier.wide}, 4) / 2) * 2"
    },
    "3xl": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 4.6) / 2) * 2"
    },
    "4xl": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 5) / 2) * 2"
    },
    "5xl": {
      "$type": "spacing",
      "$value": "round({step.base} * pow({multiplier.wide}, 5.58) / 2) * 2"
    }
  },
  "breakpoint": {
    "viewport": {
      "$type": "number",
      "$value": "1920"
    },
    "container": {
      "$type": "number",
      "$value": "{spacing.2xl}"
    }
  },
  "font-size": {
    "f-3": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, -0.5))"
    },
    "f-2": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, -0.4))"
    },
    "f-1": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, -0.2))"
    },
    "f0": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 0))"
    },
    "f1": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 0.6) / 2) * 2"
    },
    "f2": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 1))"
    },
    "f3": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 1.4))"
    },
    "f4": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 1.8))"
    },
    "f5": {
      "$type": "fontSizes",
      "$value": "round(16 * pow({multiplier.wide}, 2.2))"
    }
  }
}