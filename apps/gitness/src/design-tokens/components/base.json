{
  "button": {
    "default": {
      "$type": "composition",
      "$value": {
        "borderRadius": "{radii.xs}",
        "horizontalPadding": "{spacing.7}",
        "verticalPadding": "{spacing.2}",
        "itemSpacing": "{spacing.2}",
        "height": "{sizing.5}"
      }
    },
    "sm": {
      "$type": "composition",
      "$value": {
        "borderRadius": "{rounded.rounded}",
        "horizontalPadding": "{spacing.3}",
        "verticalPadding": "{spacing.2-half}",
        "itemSpacing": "{spacing.2-half}",
        "height": "{size.7}"
      }
    },
    "lg": {
      "$type": "composition",
      "$value": {
        "borderRadius": "{radii.circle}",
        "horizontalPadding": "{spacing.8}",
        "verticalPadding": "{spacing.2}",
        "itemSpacing": "{spacing.2}",
        "height": "{sizing.6}"
      }
    },
    "icon": {
      "$type": "composition",
      "$value": {
        "borderRadius": "{radii.xs}",
        "sizing": "{sizing.5}"
      }
    }
  },
  "button-link": {
    "default": {
      "$type": "composition",
      "$value": {
        "itemSpacing": "{spacing.2-half}",
        "height": "{size.4}"
      }
    },
    "sm": {
      "$type": "composition",
      "$value": {
        "itemSpacing": "{spacing.2-half}",
        "height": "{size.4}"
      }
    }
  }
}