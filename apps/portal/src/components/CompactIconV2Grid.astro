---
import { IconV2, IconNameMapV2, Card, Text } from "@harnessio/ui/components";
---

<div
  class="not-content grid grid-cols-[repeat(auto-fill,minmax(120px,1fr))] gap-2"
>
  {
    Object.keys(IconNameMapV2).map((name) => (
      <Card.Root className="aspect-square grid place-items-center" title={name}>
        <Card.Content className="grid place-items-center text-center gap-3">
          <IconV2 size={28} name={name as keyof typeof IconNameMapV2} />
          <Text color="foreground-3">{name}</Text>
        </Card.Content>
      </Card.Root>
    ))
  }
</div>
