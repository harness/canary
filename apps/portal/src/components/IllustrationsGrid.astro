---
import {
  Illustration,
  IllustrationsNameMap,
  Card,
  Text,
  CopyButton,
} from "@harnessio/ui/components";
---

<div
  class="not-content grid grid-cols-[repeat(auto-fill,minmax(150px,1fr))] gap-2"
>
  {
    Object.keys(IllustrationsNameMap).map((name) => (
      <Card.Root className="grid place-items-center" title={name}>
        <Card.Content className="grid grid-rows-[auto_30px_auto] place-items-center text-center gap-3">
          <Illustration name={name as keyof typeof IllustrationsNameMap} />
          <Text align="center" color="foreground-3">
            {name}
          </Text>
          <CopyButton name={name} client:only />
        </Card.Content>
      </Card.Root>
    ))
  }
</div>
