{
  "badge": {
    "size": {
      "sm": {
        "$type": "sizing",
        "$value": "{size.5}"
      },
      "md": {
        "$type": "sizing",
        "$value": "{size.6}"
      }
    },
    "md": {
      "gap": {
        "$type": "spacing",
        "$value": "{spacing.1}"
      },
      "px": {
        "$type": "spacing",
        "$value": "{spacing.2}"
      },
      "py": {
        "$type": "spacing",
        "$value": "{spacing.1}"
      }
    },
    "radius": {
      "$type": "borderRadius",
      "$value": "{rounded.3}"
    },
    "border": {
      "$type": "borderWidth",
      "$value": "{borderWidth.1}"
    },
    "sm": {
      "gap": {
        "$type": "spacing",
        "$value": "{spacing.half}"
      },
      "px": {
        "$type": "spacing",
        "$value": "{spacing.1-half}"
      },
      "py": {
        "$type": "spacing",
        "$value": "{spacing.half}"
      }
    },
    "split": {
      "right": {
        "radius": {
          "r": {
            "$type": "borderRadius",
            "$value": "{badge.radius}"
          },
          "l": {
            "$type": "borderRadius",
            "$value": "{rounded.none}"
          }
        }
      },
      "left": {
        "radius": {
          "r": {
            "$type": "borderRadius",
            "$value": "{rounded.none}"
          },
          "l": {
            "$type": "borderRadius",
            "$value": "{badge.radius}"
          }
        }
      }
    }
  },
  "badge-status": {
    "gap": {
      "$type": "spacing",
      "$value": "{spacing.1-half}"
    }
  },
  "badge-counter": {
    "py": {
      "$type": "spacing",
      "$value": "{spacing.half}"
    },
    "px": {
      "$type": "spacing",
      "$value": "{spacing.1}"
    },
    "size": {
      "sm": {
        "$type": "sizing",
        "$value": "{size.4-half}"
      }
    },
    "radius": {
      "$type": "borderRadius",
      "$value": "{rounded.3}"
    }
  },
  "badge-indicator": {
    "size": {
      "sm": {
        "$type": "sizing",
        "$value": "{size.2}"
      }
    }
  }
}