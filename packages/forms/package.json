{
  "name": "@harnessio/forms",
  "version": "0.0.5",
  "description": "Harness Forms Library",
  "scripts": {
    "playground": "vite dev --config vite.config.playground.ts",
    "dev": "run-p build:watch",
    "build": "vite build",
    "build:ci": "vite build",
    "build:watch": "vite build --watch",
    "prepublishOnly": "pnpm build",
    "pretty": "prettier --check ./src",
    "pre-commit": "lint-staged"
  },
  "private": false,
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harness/canary/tree/main/packages/forms"
  },
  "bugs": {
    "url": "https://github.com/harness/canary/issues"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "@hookform/resolvers": "^3.9.0",
    "lodash-es": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.28.0",
    "uuid": "^8.3.0",
    "yup": "^0.29.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^16.18.84",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "dts-bundle-generator": "^6.4.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-svgr": "^4.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint ./src --fix",
      "prettier ./src --write"
    ]
  }
}
