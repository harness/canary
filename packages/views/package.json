{
  "name": "@harnessio/views",
  "version": "0.0.1",
  "description": "Harness Unified Pipeline UI views",
  "scripts": {
    "dev": "vite",
    "preinstall": "npx only-allow pnpm",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "prepublishOnly": "pnpm build",
    "lint": "eslint ./src",
    "pretty": "prettier --check ./src",
    "pre-commit": "lint-staged",
    "typecheck": "tsc -b"
  },
  "private": false,
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "tailwind.config.js",
    "src/styles.css"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./tailwind.config": "./tailwind.config.js",
    "./styles": "./dist/style.css"
  },
  "style": "./dist/style.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/harness/canary.git"
  },
  "author": "Harness Inc.",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/harness/canary/issues"
  },
  "homepage": "https://github.com/harness/canary",
  "dependencies": {
    "@harnessio/forms": "workspace:*",
    "@harnessio/ui": "workspace:*",
    "@radix-ui/react-slot": "^1.1.0",
    "classnames": "^2.5.1",
    "lodash-es": "^4.17.21",
    "react-hook-form": "^7.28.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/lodash-es": "^4.17.9",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "globals": "^15.8.0",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "react-router-dom": "^6.26.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint ./src --fix",
      "prettier ./src --write"
    ]
  }
}
